{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "jsx": "react",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true,
        "declaration": true,
        "sourceMap": true,
        "lib": ["es6", "es2017", "dom"],
        "paths": {
            "~/*": ["./*"]
        }
    },
    "include": ["src/**/*"],
    "exclude": [
        "node_modules",
        "**/*.spec.tsx",
        "**/*.stories.tsx",
        "**/__test__/**",
        "dist/**/*"
    ]
}
